<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:scaleType="centerCrop"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/mainImageView"
        android:layout_width="131dp"
        android:layout_height="125dp"
        android:background="@drawable/big_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.249"
        app:srcCompat="@drawable/ic_baseline_music_note_24"
        tools:ignore="ContentDescription"
       />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/backgroundButton"
        android:text="@string/music_name"
        android:textColor="@color/textButton"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/prevBackgroundImage"
        android:layout_width="78dp"
        android:layout_height="77dp"
        android:layout_margin="20dp"
        android:background="@drawable/small_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.892"
        tools:ignore="ContentDescription"
        android:onClick="prevHandler"/>

    <ImageView
        android:id="@+id/prevButtonImage"
        android:layout_width="78dp"
        android:layout_height="77dp"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.892"
        app:srcCompat="@drawable/ic_baseline_skip_previous_24"
        tools:ignore="ContentDescription"
        android:onClick="prevHandler"/>

    <ImageView
        android:id="@+id/playBackgroundImage"
        android:layout_width="78dp"
        android:layout_height="77dp"
        android:layout_margin="20dp"
        android:background="@drawable/small_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.889"
        tools:ignore="ContentDescription"
        android:onClick="playHandler"
        />

    <ImageView
        android:id="@+id/playButtonImage"
        android:layout_width="78dp"
        android:layout_height="77dp"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.889"
        app:srcCompat="@drawable/ic_baseline_play_arrow_24"
        tools:ignore="ContentDescription"
        android:onClick="playHandler"
        />

    <ImageView
        android:id="@+id/nextBackgroundImage"
        android:layout_width="78dp"
        android:layout_height="77dp"
        android:layout_margin="20dp"
        android:background="@drawable/small_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.891"
        tools:ignore="ContentDescription"
        android:onClick="nextHandler"
        />

    <ImageView
        android:id="@+id/nextButtonImage"
        android:layout_width="78dp"
        android:layout_height="77dp"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.891"
        app:srcCompat="@drawable/ic_baseline_skip_next_24"
        tools:ignore="ContentDescription"
        android:onClick="nextHandler"/>

    <SeekBar
        android:id="@+id/volumeSeekBar"
        android:layout_width="365dp"
        android:layout_height="43dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.684"
        />

    <ImageView
        android:id="@+id/pauseButtonImage"
        android:layout_width="78dp"
        android:layout_height="77dp"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.889"
        tools:ignore="ContentDescription"
        app:srcCompat="@drawable/ic_baseline_pause_24"
        android:alpha="0"/>

</androidx.constraintlayout.widget.ConstraintLayout>